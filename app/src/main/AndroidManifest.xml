<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-permission
        android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".MvcPApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.MobileClean250812">
        <activity
            android:name=".cp.one.GuideActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".cp.main.MainActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:exported="true"/>
        <activity android:name=".cp.one.ProShareActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:exported="true"/>
        <activity android:name=".cp.scan.CleanTrashActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:exported="true"/>

        <activity android:name=".cp.complete.CleanCompleteActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:exported="true"/>
        <activity android:name=".cp.pic.CleanPictureActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:exported="true"/>
        <activity android:name=".cp.file.CleanFileActivityOptimized"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:exported="true"/>
        <activity android:name=".cp.load.ScanLoadActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:exported="true"/>
        <activity android:name=".cp.load.CleanLoadActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:exported="true"/>
    </application>

</manifest>